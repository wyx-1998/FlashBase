{
  "name": "flashbase",
  "version": "1.0.0",
  "description": "FlashBase - 闪电般的知识库管理工具",
  "main": "dist/main/main/app.js",
  "homepage": "./",
  "author": "Dia Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/flashbase.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/flashbase/issues"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "knowledge-base",
    "fastgpt",
    "desktop-app",
    "clipboard",
    "shortcuts"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "npm run build:preload && tsc -p src/main && NODE_ENV=development electron dist/main/main/app.js",
    "dev:renderer": "vite src/renderer",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "npm run build:preload && tsc -p src/main",
    "build:preload": "tsc -p src/preload",
    "build:renderer": "vite build src/renderer && mkdir -p dist/renderer && cp -r src/renderer/dist/* dist/renderer/",
    "package": "electron-builder",
    "package:all": "electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "antd": "^5.12.0",
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "node-html-parser": "^6.1.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0"
  },
  "build": {
    "appId": "com.flashbase.desktop",
    "productName": "FlashBase",
    "directories": {
      "output": "release",
      "buildResources": "build-resources"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "public/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}